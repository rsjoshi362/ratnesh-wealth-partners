<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 mb-3">
            <div class="col-lg-6 wow fadeInUp img-container" data-wow-delay="0.1s">
                <div class="img-border">
                    <img class="img-fluid" src="@Url.Content("~/img/offerings/commercial-printing-services.jpg")" alt="Commercial Printing Services">
                </div>
