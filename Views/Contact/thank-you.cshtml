@{
    ViewData["Title"] = "Thank you for contacting us.";
}

<style>
    /*body { font-family: Arial, sans-serif; background-color: #f9f9f9; margin: 0; padding: 0; display: flex; align-items: center; justify-content: center; height: 100vh; }*/
    .thank-you-container { text-align: center; border-radius: 10px; padding: 30px 40px; width: 100%; max-width: 500px; }
    .thank-you-icon { font-size: 80px; color: #d52b27; margin-bottom: 20px; }
    .thank-you-message { font-size: 24px; font-weight: bold; margin-bottom: 10px; }
    .thank-you-subtext { font-size: 16px; color: #555; }
    .thank-you-footer { margin-top: 20px; font-size: 14px; color: var(--text-light-active) }
</style>

<div class="container d-flex justify-content-center align-items-center" style="height: 50vh">
    <div class="thank-you-container bg-body shadow pb-5">
        <div class="thank-you-icon"><i class="fas fa-envelope"></i></div>
        <div class="thank-you-message">Thank You!</div>
        <div class="thank-you-subtext">Thank you for contacting us.</div>
        <div class="thank-you-subtext">We will get back to you shortly.</div>
        @* <div class="thank-you-footer">© @(DateTime.Now.Year.ToString()) Ratnesh Wealth Partners. All Rights Reserved.</div> *@
    </div>
</div>