@model List<OfferingModel>
@{
    ViewData["Title"] = "Home Page";
    string fullName_Rohit = "Mr. Rohit Jategaonkar";
    string fullName_Shashank = "Mr. Shashank Jategaonkar";
    string brandName = "Ratnesh Wealth Partners";
}

<!-- Hero Section Carousel Start -->
<section class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#header-carousel" data-bs-slide-to="0" class="mx-2 active" aria-current="true" aria-label="Slide 1">
                <img class="img-fluid" src="@Url.Content("~/img/banners/carousel-1-unsplash.jpg")" alt="Image" />
            </button>
            <button type="button" data-bs-target="#header-carousel" data-bs-slide-to="1" class="mx-2" aria-label="Slide 2">
                <img class="img-fluid" src="@Url.Content("~/img/banners/carousel-2-unsplash.jpg")" alt="Image" />
            </button>
            <button type="button" data-bs-target="#header-carousel" data-bs-slide-to="2" class="mx-2" aria-label="Slide 3">
                <img class="img-fluid" src="@Url.Content("~/img/banners/carousel-3-unsplash.jpg")" alt="Image" />
            </button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="@Url.Content("~/img/banners/carousel-1-unsplash.jpg")" alt="Image" />
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase mb-4 animated zoomIn">Unlock your financial potential with</h4>
                        <h1 class="display-1 text-white mb-0 animated zoomIn">Expert Guidance</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="@Url.Content("~/img/banners/carousel-2-unsplash.jpg")" alt="Image" />
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase mb-4 animated zoomIn">Unlock your financial potential with</h4>
                        <h1 class="display-1 text-white mb-0 animated zoomIn">Strategic Insights</h1>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="@Url.Content("~/img/banners/carousel-3-unsplash.jpg")" alt="Image" />
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <h4 class="text-white text-uppercase mb-4 animated zoomIn">Unlock your financial potential with</h4>
                        <h1 class="display-1 text-white mb-0 animated zoomIn">Personalized Advice</h1>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
<!-- Hero Section Carousel End -->
<!-- Facts/Counters Start -->
<section class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="fact-item bg-light-2 rounded text-center h-100 p-5">
                    <i class="fa fa-certificate fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">Years in Business</h5>
                    <div class="display-5 mb-0">
                        <h1 data-toggle="counter-up">7</h1>
                        <span class="display-5">+</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="fact-item bg-light-2 rounded text-center h-100 p-5">
                    <i class="fa fa-university fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">AUM</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">10</h1>
                    <span class="display-5">CR+</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="fact-item bg-light-2 rounded text-center h-100 p-5">
                    <i class="fa fa-users fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">Satisfied Families</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">150</h1>
                    <span class="display-5">*</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="fact-item bg-light-2 rounded text-center h-100 p-5">
                    <i class="fa fa-handshake fa-4x text-primary mb-4"></i>
                    <h5 class="mb-3">AMC Partners</h5>
                    <h1 class="display-5 mb-0" data-toggle="counter-up">25</h1>
                    <span class="display-5">+</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Facts/Counters End -->
<!-- About Start -->
<section class="container-fluid bg-light-2 py-5 position-relative">
    <div class="container pb-5">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="img-border img-container">
                    <img class="img-fluid" src="@Url.Content("~/img/about-us-unsplash.jpg")" alt="About Us" />
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="h-100">
                    <h2 class="section-title text-start text-primary pe-3 h6 bg-light-2">About Us</h2>
                    <div class="section-title-line"></div>
                    <h1 class="display-6 mb-4">#1 Your Trusted Partner in <span class="text-primary">Financial Success</span></h1>
                    <p>At <b>@brandName</b>, we are committed to providing expert financial advisory and wealth management services tailored to the unique needs of our clients. Founded in 2019 under the leadership of <b>@fullName_Rohit</b> and <b>@fullName_Shashank</b>, our firm has quickly established itself as a trusted partner in helping individuals and businesses achieve their financial goals with confidence and clarity.</p>
                    <p class="mb-4">With a combined experience in financial markets, wealth management, and investment strategies, we strive to offer personalized, comprehensive solutions that address the diverse financial needs of our clients. Our approach is driven by a commitment to delivering exceptional value, transparency, and integrity in every aspect of our service.</p>
                    <div class="d-flex align-items-center mb-4 pb-2">
                        <img class="flex-shrink-0 rounded-circle" src="@Url.Content("~/img/Rohit-Jategaonkar-Profile.jpg")" alt="@fullName_Rohit" style="width: 70px; height: 70px;">
                        <div class="ps-4">
                            <h6>@fullName_Rohit</h6>
                            <small>NY University, USA (Gold Medalist)</small>
                            <br />
                            <small>Managing Partner</small>
                        </div>
                    </div>
                    <a class="btn btn-primary rounded-pill py-3 px-5" asp-controller="about" asp-action="RatneshWealthPartners">Read More</a>
                </div>
            </div>
        </div>
    </div>
    <div class="custom-shape-divider-bottom-1736741587">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
        </svg>
    </div>
</section>
<!-- About End -->
<!-- Offerings Start -->
<section class="container-xxl py-5">
    <div class="container pt-lg-4">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <h2 class="section-title bg-white text-center text-primary px-3 h6">Offerings</h2>
            <div class="section-title-line mx-auto"></div>
            <h1 class="display-6 mb-4">Comprehensive Financial Solutions for Every Need</h1>
        </div>
        <div class="row g-4">
            @foreach (var offering in Model)
            {
                <figure class="figure col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="@offering.Delay">
                    <a class="service-item d-block text-center h-100 rounded-2" asp-controller="Offerings" asp-action="@offering.Action">
                        <img class="figure-img img-fluid @offering.extraClass" src="@Url.Content(offering.ImageUrl)" alt="@offering.AltText" />
                        <figcaption class="figure-caption h5">@offering.Name</figcaption>
                    </a>
                </figure>
            }
        </div>
    </div>
</section>
<!-- Offerings End -->
